<h1 id="page_title">Posts</h1>

<div id="posts_wrapper" class="skinny_wrapper">
  <% @posts.each do |post| %>
    <div class="post">
      <p class="date"><%= post.created_at.strftime("%A, %B %d")%></p>
      <h2><%= link_to post.title, post %></h2>
      <hr>
  <% end %>

  <p><%= link_to "New Post", new_post_path %></p>

</div>