<div id="post_show_content" class="skinny_wrapper wrapper_pading">
  <header>
    <p class="date"><%= @post.created_at.strftime("%A, %B %d") %></p>
    <h1><%= @post.title %></h1>
    <hr>
  </header>

  <div id="content">
    <%= simple_format(@post.body) %>
  </div>

    <div id="admin_links">
        <%= link_to "Edit", edit_post_path(@post), class: "edit" %>
        <%= link_to "Delete", post_path(@post), method: :delete, data:  { confirm: "Are you sure?"}, class: "delete" %>
    </div>
  <hr>

  <%= render 'disqus' %>

</div>