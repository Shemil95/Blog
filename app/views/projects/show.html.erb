<div id="post_show_content" class="skinny_wrapper wrapper_pading">
  <header>
    <p class="date"><%= @project.created_at.strftime("%A, %B %d") %></p>
    <h1><%= @project.title %></h1>
    <hr>
  </header>

  <div id="content">
    <%= simple_format(@project.description) %>

    <div class="button_wrapper">
      <a href="<%= @project.link %>" class="project_button" target="_blank">Visit <%= @project.title %></a>
    </div>
  </div>

    <div id="admin_links">
        <%= link_to "Edit", edit_project_path(@project), class: "edit" %>
        <%= link_to "Delete", project_path(@project), method: :delete, data:  { confirm: "Are you sure?"}, class: "delete" %>
    </div>
  <hr>

</div>